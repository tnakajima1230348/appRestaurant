<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5e131"
    tools:context=".RestaurantAccountInfoChange">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        android:text="店舗アカウント情報管理"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- bottom buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:backgroundTint="#eb4242"
            android:padding="0dp"
            android:text="HOME"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonAccount"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:backgroundTint="#eb4242"
            android:padding="0dp"
            android:text="アカウント"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSeat"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:backgroundTint="#eb4242"
            android:padding="0dp"
            android:text="座席"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonReserve"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:backgroundTint="#eb4242"
            android:padding="0dp"
            android:text="予約"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="616dp"
        android:layout_marginTop="52dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/errorDisplay"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="50dp"
            android:text="errorMessage"
            android:textColor="#ff0000"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/textBoxUserName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="#efefef"
            android:ems="10"
            android:hint="ユーザーネーム"
            android:inputType="textPersonName"
            android:textColor="#444444"
            android:textColorHint="#777777" />

        <EditText
            android:id="@+id/textBoxPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:background="#efefef"
            android:baselineAligned="false"
            android:ems="10"
            android:hint="パスワード"
            android:inputType="textPassword"
            android:textColor="#444444"
            android:textColorHint="#777777" />

        <EditText
            android:id="@+id/textBoxRestaurantPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:background="#efefef"
            android:baselineAligned="false"
            android:ems="10"
            android:hint="restaurant_password"
            android:inputType="textPassword"
            android:textColor="#444444"
            android:textColorHint="#777777" />

        <Button
            android:id="@+id/buttonChange"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#efefef"
            android:text="変更"
            android:textColor="#555555" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>